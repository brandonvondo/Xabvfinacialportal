@model Xabvfinacialportal.ViewModels.TransactionModalVM
@using (Html.BeginForm("Create", "Transactions", FormMethod.Post))
{
    <div class="modal-body">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h1 class="transferhead text-center">Withdrawal from a Personal Account</h1>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Purpose)
            @Html.Hidden("TransactionType", 1)

            <div class="form-group row">
                @Html.Label("Bank Account", htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-6">
                    @Html.DropDownList("AccountId", null, htmlAttributes: new { @class = "form-control, lightback" })
                </div>
            </div>

            <div class="form-group row">
                @Html.Label("Budget Item", htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-6">
                    @Html.DropDownList("BudgetItemId", null, htmlAttributes: new { @class = "form-control, lightback" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control, lightback", @data_inputmask = "'alias': 'currency'" } })
                    @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-12 text-center">
                    @Html.TextAreaFor(model => model.Memo, new { rows = 4, cols = 40, maxlength = 148, @class = "form-control, lightback", @placeholder = "Insert memo here, e.g. 'Grocery trip'" })
                    @Html.ValidationMessageFor(model => model.Memo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success">Submit</button>
        <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
    </div>
}