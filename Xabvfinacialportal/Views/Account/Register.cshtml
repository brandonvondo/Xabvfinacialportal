@using Xabvfinacialportal.Models
@model ExtendedRegisterViewModel

@{ Layout = null;}
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>xaBvdget Login</title>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <!-- base:css -->
    <link href="~/Scripts/vendors/mdi/css/materialdesignicons.min.css" rel="stylesheet" />
    <link href="~/Scripts/vendors/css/vendor.bundle.base.css" rel="stylesheet" />
    <!-- endinject -->
    <!-- plugin css for this page -->
    <link href="~/Scripts/vendors/dropzone/dropzone.css" rel="stylesheet" />
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link href="~/Content/css/dstyle.css" rel="stylesheet" />
    <link href="~/Content/css/custom.css" rel="stylesheet" />
    <!-- endinject -->
</head>


<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="main-panel">
                <div class="content-wrapper d-flex align-items-center auth px-0">
                    <div class="row w-100 mx-0">
                        <div class="col-lg-4 mx-auto">
                            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                                <div class="brand-logo">
                                    <img src="~/images/logo.svg" />
                                    <img id="output_image" src="~/images/pfpsample.png" />
                                </div>
                                <h4>New here?</h4>
                                <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
                                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "pt-3", role = "form", enctype = "Multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <h4>Create a new account.</h4>
                                    <hr />
                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", @placeholder = "Email" })
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control form-control-lg", @placeholder = "Username" })
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-5">
                                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control form-control-lg", @placeholder = "First Name" })
                                            </div>
                                            <div class="col-7">
                                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control form-control-lg", @placeholder = "Last Name" })
                                            </div>
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg", @placeholder = "Password" })
                                    </div>
                                    <div class="form-group">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-lg", @placeholder = "Confirm Password" })
                                    </div>
                                    <div class="form-group">
                                        <div class="row mb-4">
                                            <div class="col-6"><h4>User Avatar</h4></div>
                                            <div class="col-6"><button type="button" id="resetAvatar" class="btn btn-primary btn-sm">Reset Avatar</button></div>
                                        </div>
                                        <input name="AvatarPath" class="form-control" type="file" id="AvatarPath" onchange="preview_image(event)" />
                                    </div>
                                    <div class="mt-3">
                                        <input class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit" value="SIGN UP">
                                    </div>
                                    <div class="text-center mt-4 font-weight-light">
                                        Already have an account? <a href=@Url.Action("Login") class="text-primary">Login</a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- base:js -->
    <script src="~/Scripts/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="~/Scripts/off-canvas.js"></script>
    <script src="~/Scripts/hoverable-collapse.js"></script>
    <script src="~/Scripts/template.js"></script>
    <script src="~/Scripts/settings.js"></script>
    <script src="~/Scripts/todolist.js"></script>
    <script src="~/Scripts/profile-settings.js"></script>
    <script src="~/Scripts/vendors/dropzone/dropzone.js"></script>
    <script type='text/javascript'>
        $(document).ready(function () {
            $('#resetAvatar').on('click', function () {
                $('#AvatarPath').val('');
                var output = document.getElementById('output_image');
                output.src = "/images/pfpsample.png";
            });
        });
        function preview_image(event) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('output_image');
                output.src = reader.result;
            }
            if (event.target.files.length === 0) {
                var output = document.getElementById('output_image');
                output.src = "/images/pfpsample.png";
                return;
            }
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
    <!-- endinject -->
</body>

</html>
